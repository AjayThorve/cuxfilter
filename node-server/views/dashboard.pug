extends layout

block content
  style.
    .hid {
      display:none;
    }
  h1= title
  span#hid-val.hid #{val}
  span#hid-col.hid #{cols}

  h3 File type:
  label.radio-inline
    input(type='radio', name='load_type', value = 'csv')
    | csv
  br
  label.radio-inline
    input(type='radio', name='load_type', value = 'arrow')
    | arrow

  br

  h3 Histogram Processing: 
  label.radio-inline
    input(type='radio', name='processing', value = 'numpy')
    | numpy
  br
  label.radio-inline
    input(type='radio', name='processing', value = 'numba')
    | numba

  br

  button.btn.btn-danger(onclick='getCols()') Get Columns
  div#cols-x histogram for:<br>
  .btn-group
    button.btn.btn-danger.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
      | Action
    .dropdown-menu
      a#hist.dropdown-item(href='#') Histogram
      a#bar.dropdown-item(href='#') Bar Chart
      a#scatter.dropdown-item(href='#') Scatter plot

  div#myDiv
  script(src="https://cdn.plot.ly/plotly-latest.min.js")
  script(src="javascripts/test.js")
  